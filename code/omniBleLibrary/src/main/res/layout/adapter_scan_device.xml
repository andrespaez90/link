<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="bleName"
            android:textColor="@android:color/black"
            android:id="@+id/tx_ble_name"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="88:c2:55:d3:15:5f"
            android:textColor="@android:color/black"
            android:id="@+id/tx_ble_mac"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tx_power"
        android:text="power：1000mV"
        android:visibility="gone"
        android:layout_toLeftOf="@+id/tx_ble_rssi"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tx_status"
        android:visibility="gone"
        android:text="opens status：unknown"
        android:layout_below="@+id/tv_power"
        android:layout_toLeftOf="@+id/tx_ble_rssi"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tx_ble_rssi"
       android:text="12"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/black"

        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:background="#808080"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_height="1dp" />

</RelativeLayout>